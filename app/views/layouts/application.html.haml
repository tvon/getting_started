<!DOCTYPE html>
%html
  %head
    %title Getting Started
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body

    #content

      #user-tools
        - if user_signed_in?
          = link_to('Profile', edit_user_registration_path)
          = link_to('Sign out', destroy_user_session_path)
        - else
          = link_to('Sign in', new_user_session_path)


      - if notice
        %p.notice= notice

      - if alert
        %p.alert= alert

      = yield
